			<dependency>
				<groupId>pl.writeonly</groupId>
				<artifactId>scalare-japi</artifactId>
				<version>${scalare.version}</version>
			</dependency>
			<dependency>
				<groupId>pl.writeonly</groupId>
				<artifactId>scalare-rest</artifactId>
				<version>${scalare.version}</version>
			</dependency>
			<dependency>
				<groupId>pl.writeonly</groupId>
				<artifactId>scalare-view</artifactId>
