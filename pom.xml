				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>pl.writeonly</groupId>
				<artifactId>scalare-core</artifactId>
				<version>0.0.1-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>pl.writeonly</groupId>
